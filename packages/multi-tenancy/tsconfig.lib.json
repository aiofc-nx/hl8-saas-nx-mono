{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "declaration": true,
    "composite": true,
    "types": ["node"]
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/__tests__/**"
  ],
  "references": [
    {
      "path": "../common/tsconfig.lib.json"
    },
    {
      "path": "../config/tsconfig.lib.json"
    },
    {
      "path": "../logger/tsconfig.lib.json"
    }
  ]
}
